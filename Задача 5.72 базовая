import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        double initialDistance = 10.0; 
        double[] distances = new double[10]; 
        distances[0] = initialDistance;
        
        for (int i = 1; i < 10; i++) {
            distances[i] = distances[i - 1] * 1.10; 
        }
        
        System.out.println("Пробег лыжника за второй, третий, ..., десятый день:");
        for (int i = 1; i < 10; i++) {
            System.out.printf("День %d: %.2f км%n", i + 1, distances[i]);
        }
        
        double totalDistance = 0.0;
        for (int i = 0; i < 7; i++) {
            totalDistance += distances[i];
        }
        
        System.out.printf("Суммарный путь за первые 7 дней: %.2f км%n", totalDistance);
    }
}
